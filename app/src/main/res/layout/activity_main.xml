<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    android:layout_marginTop="27dp"
    android:layout_marginBottom="27dp"
    android:layout_marginLeft="48dp"
    android:layout_marginRight="48dp"

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint"

        android:inputType="textEmailAddress"
        android:nextFocusLeft="@id/emailBox"
        android:nextFocusRight="@id/emailBox"
        android:nextFocusUp="@id/emailBox"
        android:nextFocusDown="@id/typeinPswd" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password" />

    <EditText
        android:id="@+id/typeinPswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:nextFocusLeft="@id/typeinPswd"
        android:nextFocusRight="@id/typeinPswd"
        android:nextFocusUp="@id/typeinPswd"
        android:nextFocusDown="@id/button" />


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nextFocusLeft="@id/button"
        android:nextFocusRight="@id/button"
        android:nextFocusUp="@id/button"
        android:nextFocusDown="@id/emailBox"
        android:text="@string/ButtonText" />

</LinearLayout>